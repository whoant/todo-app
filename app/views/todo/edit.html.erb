<div class="row">
    <div class="col-xl-12 col md-12 col-12">
        <div class="card mt-5">

            <div class="card-body">
                <h3 class="card-title text-center">
                    Update todo
                </h3>
                <div class="row">
                    <div class="col-12">
                        <%= form_with model: @todos, url: todo_path, data: { remote: false } do |form| %>
                            <div class="mb-3">
                                <%= form.label :title, class: 'form-label' %>
                                <%= form.text_field :title, class: 'form-control', placeholder: 'Title', value: @todo.title %>
                            </div>
                            <div class="mb-3">
                                <%= form.label :status, class: 'form-label' %>
                                <%= form.options_for_select([['Đã hoàn thành', true], ['Chưa hoàn thành', false]]) :status, class: 'form-control', placeholder: 'Status', value: @todo.title %>
                            </div>
                            <div class="mb-3">
                                <%= form.submit 'Update', class: 'btn btn-primary' %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>